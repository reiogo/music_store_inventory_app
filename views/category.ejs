<html>
  <head>
    <link rel="stylesheet" href="/styles.css">
    <title><%= title %></title>
  </head>
  <body>
    <%- include('navbar', {links:links}) %>
    <h1> <%= title %></h1>
    <form action="/category" method="GET">
        <label for="category">Search in: </label><br>
        <select id="category" name="category">
        <% if (locals.categories) { %>
            <% categories.forEach((eachcategory) => { %>
            <option value="<%=eachcategory.category%>" ><%=eachcategory.category%></option>
        <% }); %>
         <% } %>
        </select><br>
        <button type="submit">
            Choose Category
        </button>
    </form>
    <% if (locals.instruments) { %>
        <% instruments.forEach((instrument) => { %>
        <div class="instrument-div">
            <p><%= instrument.instrument_name %></p>
            <p><%= instrument.maker_name %></p>
            <p><%= instrument.price %></p>
            <a href="/details?id=<%= instrument.id %>">Details</a>
        </div>
        <% }); %>
        <% } %>
  </body>
</html>
